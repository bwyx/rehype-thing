{
  "type": "module",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --write '{src,tests}/**/*.js'",
    "tscw": "tsc-watch --onSuccess \"npm run test\"",
    "test": "uvu tests",
    "prepare": "husky install"
  },
  "devDependencies": {
    "dedent": "^0.7.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "rehype": "^12.0.1",
    "tsc-watch": "^4.6.0",
    "typescript": "4.4.4",
    "uvu": "^0.5.3"
  },
  "dependencies": {
    "hast-util-to-string": "^2.0.0",
    "refractor": "^4.4.0",
    "unist-util-visit": "^4.1.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "none",
    "tabWidth": 2
  }
}
